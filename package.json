{
  "name": "@kontest/gamelift-pb",
  "version": "0.1.0",
  "description": "NodeJS addon for Protocol Buffer objects used in AWS Gamelift",
  "main": "dist/index.js",
  "scripts": {
    "prepublish": "npm run build",
    "build": "tsc",
    "build:test": "cmake-js build --target gamelift-pb-wire-test",
    "pretest": "npm run build:test",
    "test": "mocha",
    "docs": "typedoc --options typedoc.json --stripInternal",
    "docs:internal": "typedoc --options typedocs.json",
    "format": "prettier --write lib/**/*.ts",
    "format:test": "clang-format -i tests/include/* tests/src/*",
    "lint": "eslint lib/*.ts"
  },
  "keywords": [
    "kontest",
    "aws",
    "gamelift",
    "protobuf",
    "addon"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/therealsamf/gamelift-pb.git"
  },
  "author": "therealsamf",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^14.6.0",
    "protobufjs": "^6.10.1"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@types/faker": "^4.1.12",
    "@types/mocha": "^8.0.3",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "bindings": "^1.5.0",
    "clang-format": "^1.4.0",
    "cmake-js": "^6.1.0",
    "eslint": "^7.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-tsdoc": "^0.2.6",
    "faker": "^5.1.0",
    "mocha": "^8.1.3",
    "node-addon-api": "^3.0.0",
    "prettier": "^2.1.1",
    "ts-node": "^9.0.0",
    "typedoc": "^0.18.0",
    "typescript": "^4.0.2"
  },
  "binary": {
    "napi_versions": [
      6
    ]
  }
}
